PROJECT = cliente
CFLAGS = -Wall
LDFLAGS = -lm -lpthread
CC = g++ -g3
EXCLUDED_FILES = servidor.cpp Respuesta.cpp servidorWEB.cpp
OBJECTS = $(patsubst %.cpp, %.o, $(filter-out $(EXCLUDED_FILES),$(wildcard *.cpp)))

ID_RED = 192.168.0.0
SERVER_PORT = 5000
HOST_INICIAL = 8
HOST_FINAL = 8
CALIDAD = 1
ARGS = $(ID_RED) $(SERVER_PORT) $(HOST_INICIAL) $(HOST_FINAL) $(CALIDAD)

all: $(PROJECT)

%.o: %.cpp
	$(CC) -c $< $(CFLAGS)

$(PROJECT): $(OBJECTS)
	$(CC) -o $@ $^ $(LDFLAGS)

.PHONY: clean

clean:
	rm -f $(OBJECTS) $(PROJECT)

run:
	./$(PROJECT) $(ARGS)

